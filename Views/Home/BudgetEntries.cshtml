@model BudgetModel
<form method="post">
	<h5>New Cost Entry <span class="badge bg-secondary"></span></h5>
	<div class="row">
		<div class="col-6">
			<div class="form-group">
				<label for="Name">Description</label>
				<div>
					<input type="text" class="form-control" name="Description" asp-for="Description">
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="col-6">
			<div class="form-group">
				<label for="@Model.Value" class="col-sm-2 control-label">Cost</label>
				<div class="col-sm-10">
					<input class="form-control" name="Value" asp-for="Value">
					<span asp-validation-for="Value" class="text-danger"></span>
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
		</div>

	</div>
</form>

