@model BudgetModel
<div class="container">
	<div class="row">
		<div class="col-12">
			<h3 class="text-center">Budget Calculator @Model.Description</h3>
		</div>
	</div>
	<hr />
	<form method="post">
		<div class="row">

			<div class="col-6">

				<div class="form-group">
					<label for="Name">Description</label>
					<div>
						<input type="text" class="form-control" name="Description" asp-for="Description">
					</div>
				</div>
			</div>
			<div class="col-6">
				<div class="form-group">
					<label for="Email" class="col-sm-2 control-label">Cost</label>
					<div class="col-sm-10">
						<input class="form-control" name="Value" asp-for="Value">
					</div>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default">Submit</button>
				</div>
			</div>

		</div>
	</form>
	<div class="row">
		<div class="col-12">
			<table>
				<tr>
					<th>Description</th>
					<th>Value</th>
				</tr>
				<tr>
					<td>Rent</td>
					<td>Value</td>
				</tr>
			</table>
		</div>
	</div>
</div>