@model BudgetModel
<form method="post">
	<div class="row">

		<div class="col-6">

			<div class="form-group">
				<label for="Name">Description</label>
				<div>
					<input type="text" class="form-control" name="Description" asp-for="Description">
				</div>
			</div>
		</div>
		<div class="col-6">
			<div class="form-group">
				<label for="Email" class="col-sm-2 control-label">Cost</label>
				<div class="col-sm-10">
					<input class="form-control" name="Value" asp-for="Value">
				</div>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>

	</div>
</form>
